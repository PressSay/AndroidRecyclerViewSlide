<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/categoryOfficialDish"
        android:layout_marginBottom="8dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="94dp"
            android:layout_height="122dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="94dp"
                android:layout_height="76dp"
                android:background="@drawable/shape_impression_rounded"
                android:src="@drawable/img_image_4"
                android:layout_marginBottom="7dp"
                android:id="@+id/imageViewOfficialDish1"
                />

            <TextView
                android:layout_width="70dp"
                android:layout_height="17dp"
                android:text="118,000 $"
                android:background="@drawable/shape_normal_rounded"
                android:backgroundTint="@color/green_primary"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginBottom="4dp"
                android:id="@+id/textViewCostOfficialDish1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="Mojito"
                android:textStyle="bold"
                android:textColor="#3C691B"
                android:id="@+id/textViewTitleOfficialDish1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="94dp"
            android:layout_height="122dp"
            android:orientation="vertical"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:gravity="center">

            <ImageView
                android:layout_width="94dp"
                android:layout_height="76dp"
                android:background="@drawable/shape_impression_rounded"
                android:src="@drawable/img_image_4"
                android:layout_marginBottom="7dp"
                android:id="@+id/imageViewOfficialDish2"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="17dp"
                android:text="118,000 $"
                android:background="@drawable/shape_normal_rounded"
                android:backgroundTint="@color/green_primary"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginBottom="4dp"
                android:id="@+id/textViewCostOfficialDish2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="Mojito"
                android:textStyle="bold"
                android:textColor="#3C691B"
                android:id="@+id/textViewTitleOfficialDish2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="94dp"
            android:layout_height="122dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="94dp"
                android:layout_height="76dp"
                android:background="@drawable/shape_impression_rounded"
                android:src="@drawable/img_image_4"
                android:layout_marginBottom="7dp"
                android:id="@+id/imageViewOfficialDish3"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="17dp"
                android:text="118,000 $"
                android:background="@drawable/shape_normal_rounded"
                android:backgroundTint="@color/green_primary"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginBottom="4dp"
                android:id="@+id/textViewCostOfficialDish3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="Mojito"
                android:textStyle="bold"
                android:textColor="#3C691B"
                android:id="@+id/textViewTitleOfficialDish3"/>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>